<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eee"
    android:orientation="vertical" 
    android:gravity="center_horizontal">
    <RelativeLayout 
        android:id="@+id/register_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bar">
        <Button
            android:id="@+id/register_reback_btn"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="返回"
            android:textSize="14sp"
            android:textColor="#fff"
            android:onClick="login_back"
            android:background="@drawable/title_btn_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="发起投票"
           />
    </RelativeLayout>
  <ScrollView
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:scrollbarStyle="outsideOverlay" 
    	android:layout_below="@+id/register_top_layout" >
			
		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="3dp" 
            android:background="@drawable/preference_single_item">

			
	
<LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    android:text="问题描述"
                    android:textColor="#333"
                    android:textSize="17sp" />
	<EditText 
	    android:id="@+id/register_passwd_edit"
	    android:layout_width="fill_parent"
	    android:layout_height="150dp"
	    android:layout_below="@+id/register_user_edit"
	    android:textColor="#000"
	    android:textSize="15sp"
	    android:gravity="top"
	    android:background="@drawable/login_editbox"/>
	</LinearLayout>
				<RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical" 
                android:layout_marginTop="25dp"
	    android:layout_marginBottom="25dp">

                <ImageButton
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/jia2" 
            android:background="@drawable/btn_style_green"
            />
	</RelativeLayout>
	<CheckBox 
	    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支持"
            android:textColor="#333"
            />
	<CheckBox 
	    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反对"
            android:textColor="#333"
            />
	<CheckBox 
	    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中立"
            android:textColor="#333"
            />
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/register_confirm_passwd_edit"
	    android:layout_marginTop="25dp"
	    android:layout_marginBottom="25dp"
	    >

	    <Button
	        android:id="@+id/register_register_btn"
	        android:layout_width="90dp"
	        android:layout_height="40dp"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:background="@drawable/btn_style_green"
	        android:onClick="toupiao"
	        android:text="发起投票"
	        android:textColor="#ffffff"
	        android:textSize="18sp" />

	</RelativeLayout>
	</LinearLayout>
	    </LinearLayout>
  </ScrollView>
</RelativeLayout>
